{
  "name": "image-color-picker",
  "displayName": "Image Color Picker",
  "description": "A simple VS Code extension to pick colors from images and save hex color codes.",
  "publisher": "KEHEMIT",
  "version": "1.0.1",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other",
    "Visualization"
  ],
  "keywords": [
    "color",
    "picker",
    "image",
    "hex",
    "color-picker",
    "image-color",
    "design",
    "web-development",
    "frontend"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/KEHEM-IT/image-color-picker.git"
  },
  "homepage": "https://github.com/KEHEM-IT/image-color-picker",
  "bugs": {
    "url": "https://github.com/KEHEM-IT/image-color-picker/issues"
  },
  "license": "MIT",
  "icon": "images/icon.png",
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "imageColorPicker.pickColor",
        "title": "Pick Color from Image",
        "category": "Image Color Picker"
      },
      {
        "command": "imageColorPicker.pickColorFromFile",
        "title": "Pick Color from Image File...",
        "category": "Image Color Picker"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "command": "imageColorPicker.pickColor",
          "when": "resourceExtname =~ /\\.(png|jpg|jpeg|gif|bmp|svg|webp)$/i",
          "group": "navigation"
        }
      ],
      "explorer/context": [
        {
          "command": "imageColorPicker.pickColor",
          "when": "resourceExtname =~ /\\.(png|jpg|jpeg|gif|bmp|svg|webp)$/i",
          "group": "navigation"
        }
      ],
      "editor/context": [
        {
          "command": "imageColorPicker.pickColor",
          "when": "resourceExtname =~ /\\.(png|jpg|jpeg|gif|bmp|svg|webp)$/i",
          "group": "navigation"
        }
      ]
    },
    "configuration": {
      "type": "object",
      "title": "Image Color Picker",
      "properties": {
        "imageColorPicker.copyFormat": {
          "type": "string",
          "enum": [
            "hex",
            "rgb",
            "hsl"
          ],
          "default": "hex",
          "description": "Default color format when copying picked colors."
        },
        "imageColorPicker.saveToClipboard": {
          "type": "boolean",
          "default": true,
          "description": "Automatically copy the picked color to clipboard."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "lint": "eslint src --ext ts",
    "test": "npm run compile && node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/node": "^16.18.0",
    "typescript": "^4.9.4",
    "eslint": "^8.35.0",
    "@typescript-eslint/eslint-plugin": "^5.52.0",
    "@typescript-eslint/parser": "^5.52.0"
  },
  "dependencies": {}
}
